class Player {

field int x, y;
field int size;

constructor Player new(int pX, int pY, int pSize){
let x = pX;
let y = pY;
let size = pSize;
return this;
}

method int getLX(){
return x;
}
method int getRX(){
return x + size;
}
method int getTY(){
return y;
}

method int getBY(){
return y + size;
}

method void draw(){
do Screen.setColor(true);
do Screen.drawRectangle(x, y, x + size, y + size);
return;
}

method void quickMove(int location){
let x = location;
//do draw();
return;
}
}

